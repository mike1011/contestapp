           <%= form_for(ProductRecommendation.new,url:recommend_products_path,:html=>{:class=>"container-fluid custom_form"},method:'POST',remote:true) do |f|%>		
                  <div class="col-lg-12">
                <div class="well well-sm"><strong><span class="glyphicon glyphicon-asterisk"></span>Required Field</strong></div>
                <div class="form-group">
                    <label for="InputName">Enter Name</label>
                    <div class="input-group col-md-12">
                      <%= f.text_field(:recommended_to,:class=>"form-control",:placeholder=>"Enter 5 emails",:required=>true)%>
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputMessage">Enter Message</label>
                    <div class="input-group">
                         <%= f.text_area(:message,:class=>"form-control",:placeholder=>"Enter 5 emails",:rows=>4,:cols=>60,:required=>true)%>
                    </div>
                </div>
                <input type="submit" name="submit" id="submit" value="Submit" class="btn btn-info">
   <a class="btn btn-danger " href="#mainCarousel" role="button" data-slide="prev">Back</a>                
            </div>
                <%end%>
            
         