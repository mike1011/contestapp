<% content_for :sidebar do %>
<h4><%= t('login.sidebar.title') %></h4>
<p><%= t('login.sidebar.content') %></p>
<% end %>
<h1>Login</h1>
<form action="<%= shopify_authorize_path %>" class="custom_form" method="post">
        <div class="form-group">
        <label for="InputName">Shopify Subdomain (<strong>subdomain</strong>.myshopify.com)</label>
        <div class="input-group">
        <input type="text"  class="form-control" name="shop" id="shop" required="required"/><br/>
        </div>
    </div>
    <div>
        <br/>
        <input type="submit" value="Connect with the Store" class="btn btn-primary btn-sm"/>
    </div>
</form>
<% if Rails.env.development? %>
<h1>Developer Login</h1>
<form action="<%= sessions_create_path %>" method="post">
    <select id="account_id" name="account_id"/>
        <% Account.all.each do |account| %>
        <option value="<%= account.id %>"><%= account.shopify_account_url %></option>
        <% end %>
    </select>
    <input type="submit" value="Login"/>
</form>
<% end %>